<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Processor -->
        <service id="stuzzo.logger.processor.web" class="Stuzzo\Monolog\Processor\ExtendedWebProcessor">
            <tag name="monolog.processor" channel="request"/>
        </service>

        <!-- ProcessorWithUserData -->
        <service id="stuzzo.logger.processor.web.user.data" class="Stuzzo\Monolog\Processor\ExtendedWebUserDataProcessor">
            <tag name="monolog.processor" channel="request"/>
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
            <argument type="service" id="security.token_storage" />
        </service>

        <!-- Formatter -->
        <service id="stuzzo.logger.stream.formatter" class="Stuzzo\Monolog\Formatter\StreamFormatter" public="false">
            <argument>TIME: %%datetime%%\nCHANNEL: %%channel%%\nLEVEL: %%level_name%%\nMESSAGE: %%message%%\n%%context.exception%%\n%%request%%\n</argument>
            <argument>d/m/Y H:i:s</argument>
            <argument>true</argument>
            <argument>true</argument>
        </service>

        <service id="stuzzo.logger.html.formatter" class="Stuzzo\Monolog\Formatter\ExtendedHtmlFormatter" public="false">
            <argument>d/m/Y H:i:s</argument>
        </service>

        <service id="stuzzo.logger.slack.formatter" class="Stuzzo\Monolog\Formatter\SlackFormatter" public="false">
            <argument>%%message%%</argument>
            <argument>d/m/Y H:i:s</argument>
            <argument>true</argument>
            <argument>true</argument>
            <call method="setEnvironment">
                <argument>%kernel.environment%</argument>
            </call>
        </service>
    </services>
</container>
